{% macro list(periods) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}
{% import 'SyliusWebBundle:Backend/Macros:misc.html.twig' as misc %}

{% if periods|length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>{{ sylius_resource_sort('name', 'sylius.locale.code'|trans) }}</th>
                <th>Heure debut</th>
                <th>Heure Fin</th>
                <th>Type Category shipping</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for period in periods %}
            <tr id="{{ period.id }}">
                <td>{{ period.name }}</td>
                <td>
                    
                </td>
                <td></td>
                <td>{{ period.shipping_category }}</td>
                <td>
                    <div class="pull-right">
                    {{ buttons.edit(path('sylius_backend_period_update', {'id': magasin.id})) }}
                    {{ buttons.delete(path('sylius_backend_period_delete', {'id': magasin.id})) }}
                   </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
{{ alerts.info('sylius.locale.no_results'|trans) }}
{% endif %}

{% endmacro %}
